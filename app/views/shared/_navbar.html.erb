<div class="navbar bg-base-100 shadow-sm">
  <div class="flex-1">
    <%= link_to "Murmur", root_path, class: "btn btn-ghost normal-case text-xl" %>
  </div>

  <% if signed_in? %>
    <div class="flex-none ml-2">
      <span class="text-xs font-semibold mr-4">Welcome, <%= link_to current_user.full_name, me_path, class: "link" %></span>
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <img
              alt="User avatar"
              src="https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.webp" />
          </div>
        </div>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
          <li><%= button_to 'Sign out', sign_out_path, method: :delete %></li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
