<%= turbo_frame_tag @modal_identifier do %>
  <%= tag.div data: {
    controller: "modal",
    modal_target: "modal",
    action: "turbo:submit-end->modal#submitEnd keyup@window->modal#closeWithKeyboard"
  }, class: "fixed inset-0 z-55 bg-black/30" do %>
    <div class="flex items-center justify-center min-h-screen px-4 py-16 w-full">
      <div class="bg-base-100 rounded-lg shadow-xl w-full sm:w-11/12 md:w-3/4 lg:w-1/2 max-w-screen-md">
        <div class="px-6 py-4 relative">
          <div class="absolute top-4 right-4">
            <%= button_tag data: { action: "modal#hideModal" }, type: "button", class: "right-3 top-3 cursor-pointer" do %>
              <svg fill="#000000" height="16px" width="16px" version="1.1"  xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 490 490" xml:space="preserve">
                <polygon points="456.851,0 245,212.564 33.149,0 0.708,32.337 212.669,245.004 0.708,457.678 33.149,490 245,277.443 456.851,490   489.292,457.678 277.331,245.004 489.292,32.337 "/>
              </svg>
            <% end %>
          </div>
          <h2 class="text-lg font-semibold mb-4"><%= @name %></h2>
          <div id="modal-content">
            <%= content %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
